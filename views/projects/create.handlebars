<form action="/projects" method="POST" class="form-container">
    <h2>Criar Novo Projeto</h2>

    <div class="form-group">
        <label for="projectId">Número do Projeto (ID):</label>
        <input type="number" id="projectId" name="projectId" placeholder="Escolha um número único" required>
    </div>

    <div class="form-group">
        <label for="name">Nome do Serviço:</label>
        <input type="text" id="name" name="name" placeholder="Digite o nome do serviço" required>
    </div>

    <div class="form-group">
        <label for="deadline">Data Limite:</label>
        <input type="date" id="deadline" name="deadline" required>
    </div>

    <div class="form-group">
        <label for="clientName">Nome do Cliente:</label>
        <input type="text" id="clientName" name="clientName" placeholder="Digite o nome do cliente" required>
    </div>

    <div class="form-group">
        <label for="location">Local do Serviço:</label>
        <input type="text" id="location" name="location" placeholder="Digite o local do serviço" required>
    </div>

    <div class="form-group">
        <label for="responsible.name">Responsável (Cliente):</label>
        <input type="text" id="responsible.name" name="responsible[name]" placeholder="Nome do responsável" required>
        <input type="text" id="responsible.phone" name="responsible[phone]" placeholder="Telefone do responsável" required>
        <input type="email" id="responsible.email" name="responsible[email]" placeholder="Email do responsável" required>
    </div>

    <div class="form-group">
        <label for="fieldExecutionDate">Data de Execução de Campo:</label>
        <input type="date" id="fieldExecutionDate" name="fieldExecutionDate" required>
    </div>

    <div class="form-group">
        <label for="fieldExecutionTime">Tempo de Execução de Campo (horas):</label>
        <input type="number" id="fieldExecutionTime" name="fieldExecutionTime" required>
    </div>

    <div class="form-group">
        <label for="fieldTechnician">Técnico Responsável pelo Campo:</label>
        <input type="text" id="fieldTechnician" name="fieldTechnician" placeholder="Nome do técnico" required>
    </div>

    <div class="form-group">
        <label for="processingExecutionDate">Data de Execução de Processamento:</label>
        <input type="date" id="processingExecutionDate" name="processingExecutionDate" required>
    </div>

    <div class="form-group">
        <label for="processingExecutionTime">Tempo de Execução de Processamento (horas):</label>
        <input type="number" id="processingExecutionTime" name="processingExecutionTime" required>
    </div>

    <div class="form-group">
        <label for="processingTechnician">Técnico Responsável pelo Processamento:</label>
        <input type="text" id="processingTechnician" name="processingTechnician" placeholder="Nome do técnico" required>
    </div>

    <div class="form-group">
        <label for="status">Status:</label>
        <select id="status" name="status" required>
            <option value="a fazer">A fazer</option>
            <option value="fazendo">Fazendo</option>
            <option value="feito">Feito</option>
        </select>
    </div>

    <div class="form-group">
        <label for="notes">Observações:</label>
        <textarea id="notes" name="notes" placeholder="Adicione alguma observação"></textarea>
    </div>

    <button type="submit">Criar Projeto</button>
</form>
